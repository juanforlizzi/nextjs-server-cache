{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.format.enable": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.vercel": true,
    "tsconfig.tsbuildinfo": true,
    "dist": true
  },
  "eslint.workingDirectories": [
    { "pattern": "projects/*/" },
    { "pattern": "packages/*/" }
  ]
}
